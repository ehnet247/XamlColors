<UserControl x:Class="XamlColors.UserColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XamlColors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border x:Name="border" BorderThickness="0" Grid.Row="0"/>
        <StackPanel Grid.Row="1">
            <Label Content="Color:"/>
            <TextBox x:Name="tbColor" TextChanged="tbColor_TextChanged" Height="30"
                     Text="#40404"/>
            <Label Content="Name:"/>
            <TextBox x:Name="tbName" Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
